    <script>
        function parsePrice(str) {
            const [min, max] = str.split('-').map(Number);
            return { min, max };
        }

        function addToTotal(price, quantity = 1) {
            return {
                min: price.min * quantity,
                max: price.max * quantity
            };
        }

        function calculateTotal() {
            let total = { min: 0, max: 0 };
            let items = [];

            // PAX Schrank
            const paxQty = parseInt(document.getElementById('pax-quantity').value) || 0;
            const paxWidth = document.getElementById('pax-width').value;
            if (paxQty > 0 && paxWidth !== '0-0') {
                const price = addToTotal(parsePrice(paxWidth), paxQty);
                total.min += price.min; total.max += price.max;
                items.push(`${paxQty}√ó PAX Schrank: ‚Ç¨${price.min}-${price.max}`);

                if (document.getElementById('pax-sliding').checked) {
                    total.min += 20 * paxQty; total.max += 50 * paxQty;
                    items.push(`  + Schiebet√ºren: ‚Ç¨${20 * paxQty}-${50 * paxQty}`);
                }
                if (document.getElementById('pax-drawers').checked) {
                    total.min += 20 * paxQty; total.max += 35 * paxQty;
                    items.push(`  + Schubladen 2-4: ‚Ç¨${20 * paxQty}-${35 * paxQty}`);
                }
                if (document.getElementById('pax-drawers-many').checked) {
                    total.min += 35 * paxQty; total.max += 60 * paxQty;
                    items.push(`  + Schubladen 5-8: ‚Ç¨${35 * paxQty}-${60 * paxQty}`);
                }
                if (document.getElementById('pax-glass').checked) {
                    total.min += 15 * paxQty; total.max += 25 * paxQty;
                    items.push(`  + Glasb√∂den: ‚Ç¨${15 * paxQty}-${25 * paxQty}`);
                }
                if (document.getElementById('pax-lighting').checked) {
                    total.min += 25 * paxQty; total.max += 40 * paxQty;
                    items.push(`  + Beleuchtung: ‚Ç¨${25 * paxQty}-${40 * paxQty}`);
                }
                if (document.getElementById('pax-wall').checked) {
                    total.min += 25 * paxQty; total.max += 40 * paxQty;
                    items.push(`  + Wandmontage: ‚Ç¨${25 * paxQty}-${40 * paxQty}`);
                }
            }

            // MALM Bett
            const malmQty = parseInt(document.getElementById('malm-quantity').value) || 0;
            const malmSize = document.getElementById('malm-size').value;
            if (malmQty > 0 && malmSize !== '0-0') {
                const price = addToTotal(parsePrice(malmSize), malmQty);
                total.min += price.min; total.max += price.max;
                items.push(`${malmQty}√ó MALM Bett: ‚Ç¨${price.min}-${price.max}`);

                if (document.getElementById('malm-storage').checked) {
                    total.min += 30 * malmQty; total.max += 50 * malmQty;
                    items.push(`  + Aufbewahrung: ‚Ç¨${30 * malmQty}-${50 * malmQty}`);
                }
                if (document.getElementById('malm-lattenrost').checked) {
                    total.min += 20 * malmQty; total.max += 35 * malmQty;
                    items.push(`  + Lattenrost: ‚Ç¨${20 * malmQty}-${35 * malmQty}`);
                }
            }

            // Kommode
            const kommodeQty = parseInt(document.getElementById('kommode-quantity').value) || 0;
            const kommodeDrawers = document.getElementById('kommode-drawers').value;
            if (kommodeQty > 0 && kommodeDrawers !== '0-0') {
                const price = addToTotal(parsePrice(kommodeDrawers), kommodeQty);
                total.min += price.min; total.max += price.max;
                items.push(`${kommodeQty}√ó Kommode: ‚Ç¨${price.min}-${price.max}`);

                if (document.getElementById('kommode-glass').checked) {
                    total.min += 10 * kommodeQty; total.max += 15 * kommodeQty;
                }
                if (document.getElementById('kommode-wall').checked) {
                    total.min += 20 * kommodeQty; total.max += 35 * kommodeQty;
                }
            }

            // BILLY
            const billyQty = parseInt(document.getElementById('billy-quantity').value) || 0;
            const billyHeight = document.getElementById('billy-height').value;
            if (billyQty > 0 && billyHeight !== '0-0') {
                const price = addToTotal(parsePrice(billyHeight), billyQty);
                total.min += price.min; total.max += price.max;
                items.push(`${billyQty}√ó BILLY: ‚Ç¨${price.min}-${price.max}`);

                if (document.getElementById('billy-glass').checked) {
                    total.min += 15 * billyQty; total.max += 25 * billyQty;
                }
                if (document.getElementById('billy-corner').checked) {
                    total.min += 25; total.max += 40;
                }
                if (document.getElementById('billy-wall').checked) {
                    total.min += 15 * billyQty; total.max += 25 * billyQty;
                }
            }

            // BEST√Ö
            const bestaCombo = document.getElementById('besta-combo').value;
            if (bestaCombo !== '0-0') {
                const price = parsePrice(bestaCombo);
                total.min += price.min; total.max += price.max;
                items.push(`BEST√Ö: ‚Ç¨${price.min}-${price.max}`);

                if (document.getElementById('besta-glass').checked) {
                    total.min += 15; total.max += 25;
                }
                if (document.getElementById('besta-drawers').checked) {
                    total.min += 20; total.max += 35;
                }
                if (document.getElementById('besta-light').checked) {
                    total.min += 30; total.max += 50;
                }
                if (document.getElementById('besta-cable').checked) {
                    total.min += 20; total.max += 35;
                }
            }

            // Tisch & St√ºhle
            const table = document.getElementById('table').value;
            if (table !== '0-0') {
                const price = parsePrice(table);
                total.min += price.min; total.max += price.max;
                items.push(`Tisch: ‚Ç¨${price.min}-${price.max}`);
            }

            const chairs = parseInt(document.getElementById('chairs').value) || 0;
            if (chairs > 0) {
                total.min += chairs * 8;
                total.max += chairs * 25;
                items.push(`${chairs}√ó St√ºhle: ‚Ç¨${chairs * 8}-${chairs * 25}`);
            }

            // POCO/ROLLER
            const pocoItems = [
                ['poco-wardrobe-2', 'Schrank 2-t√ºrig', '60-220'],
                ['poco-wardrobe-3', 'Schrank 3-t√ºrig', '80-280'],
                ['poco-wardrobe-4', 'Schrank 4+ t√ºrig', '100-350'],
                ['poco-bed-simple', 'Bett ohne K√§sten', '50-180'],
                ['poco-bed-storage', 'Bett mit K√§sten', '70-240'],
                ['poco-dresser', 'Kommode', '40-170'],
                ['poco-living-2', 'Wohnwand 2-teilig', '100-400'],
                ['poco-living-3', 'Wohnwand 3+ teilig', '150-600']
            ];

            pocoItems.forEach(([id, name, price]) => {
                if (document.getElementById(id).checked) {
                    const p = parsePrice(price);
                    total.min += p.min; total.max += p.max;
                    items.push(`${name}: ‚Ç¨${p.min}-${p.max}`);
                }
            });

            // H√ñFFNER
            if (document.getElementById('hoeffner-bedroom').checked) {
                total.min += 280; total.max += 600;
                items.push('Schlafzimmer komplett: ‚Ç¨280-600');
            }
            if (document.getElementById('hoeffner-living').checked) {
                total.min += 320; total.max += 700;
                items.push('Wohnzimmer komplett: ‚Ç¨320-700');
            }
            if (document.getElementById('hoeffner-dining').checked) {
                total.min += 280; total.max += 620;
                items.push('Esszimmer komplett: ‚Ç¨280-620');
            }

            // XXXLUTZ
            const lutzSmall = parseInt(document.getElementById('lutz-small').value) || 0;
            if (lutzSmall > 0) {
                total.min += lutzSmall * 40; total.max += lutzSmall * 150;
                items.push(`${lutzSmall}√ó Einzelm√∂bel klein: ‚Ç¨${lutzSmall * 40}-${lutzSmall * 150}`);
            }
            const lutzMedium = parseInt(document.getElementById('lutz-medium').value) || 0;
            if (lutzMedium > 0) {
                total.min += lutzMedium * 70; total.max += lutzMedium * 240;
                items.push(`${lutzMedium}√ó Einzelm√∂bel mittel: ‚Ç¨${lutzMedium * 70}-${lutzMedium * 240}`);
            }
            const lutzLarge = parseInt(document.getElementById('lutz-large').value) || 0;
            if (lutzLarge > 0) {
                total.min += lutzLarge * 120; total.max += lutzLarge * 400;
                items.push(`${lutzLarge}√ó Einzelm√∂bel gro√ü: ‚Ç¨${lutzLarge * 120}-${lutzLarge * 400}`);
            }
            if (document.getElementById('lutz-room').checked) {
                total.min += 250; total.max += 800;
                items.push('Komplett-Zimmer: ‚Ç¨250-800');
            }

            // K√úCHE
            const kitchenBrand = document.getElementById('kitchen-brand').value;
            const kitchenLower = parseFloat(document.getElementById('kitchen-lower').value) || 0;
            const kitchenUpper = parseFloat(document.getElementById('kitchen-upper').value) || 0;
            const kitchenTall = parseInt(document.getElementById('kitchen-tall').value) || 0;

            if (kitchenBrand !== '0-0-0-0' && (kitchenLower > 0 || kitchenUpper > 0 || kitchenTall > 0)) {
                const [lMin, lMax, uMin, uMax, tMin, tMax] = kitchenBrand.split('-').map(Number);
                
                if (kitchenLower > 0) {
                    const price = { min: lMin * kitchenLower, max: lMax * kitchenLower };
                    total.min += price.min; total.max += price.max;
                    items.push(`Unterschr√§nke ${kitchenLower}m: ‚Ç¨${Math.round(price.min)}-${Math.round(price.max)}`);
                }
                if (kitchenUpper > 0) {
                    const price = { min: uMin * kitchenUpper, max: uMax * kitchenUpper };
                    total.min += price.min; total.max += price.max;
                    items.push(`Oberschr√§nke ${kitchenUpper}m: ‚Ç¨${Math.round(price.min)}-${Math.round(price.max)}`);
                }
                if (kitchenTall > 0) {
                    const price = { min: tMin * kitchenTall, max: tMax * kitchenTall };
                    total.min += price.min; total.max += price.max;
                    items.push(`${kitchenTall}√ó Hochschrank: ‚Ç¨${Math.round(price.min)}-${Math.round(price.max)}`);
                }
            }

            // K√ºchen-Extras
            const kitchenExtras = [
                ['kitchen-corner-carousel', 'Eckschrank Karussell', '40-70'],
                ['kitchen-corner-lemans', 'Eckschrank Le Mans', '60-90'],
                ['kitchen-pullout', 'Apothekerschrank', '50-80'],
                ['kitchen-trash', 'M√ºlltrennsystem', '35-60'],
                ['kitchen-softclose', 'Softclose', '15-25'],
                ['kitchen-led', 'LED-Beleuchtung', '30-50']
            ];

            kitchenExtras.forEach(([id, name, price]) => {
                if (document.getElementById(id).checked) {
                    const p = parsePrice(price);
                    total.min += p.min; total.max += p.max;
                    items.push(`${name}: ‚Ç¨${p.min}-${p.max}`);
                }
            });

            // Arbeitsplatte
            const countertopMaterial = document.getElementById('countertop-material').value;
            const countertopLength = parseFloat(document.getElementById('countertop-length').value) || 0;
            const countertopShape = document.getElementById('countertop-shape').value;
            
            if (countertopMaterial !== '0-0' && countertopLength > 0) {
                const material = parsePrice(countertopMaterial);
                const shape = parsePrice(countertopShape);
                const price = {
                    min: material.min * countertopLength * shape.min,
                    max: material.max * countertopLength * shape.max
                };
                total.min += price.min; total.max += price.max;
                items.push(`Arbeitsplatte ${countertopLength}m: ‚Ç¨${Math.round(price.min)}-${Math.round(price.max)}`);

                if (document.getElementById('countertop-milling').checked) {
                    total.min += 40; total.max += 120;
                    items.push(`  + Fr√§sen: ‚Ç¨40-120`);
                }
            }

            // Sp√ºle & Armatur
            const sinkType = document.getElementById('sink-type').value;
            if (sinkType !== '0-0') {
                const p = parsePrice(sinkType);
                total.min += p.min; total.max += p.max;
                items.push(`Sp√ºle: ‚Ç¨${p.min}-${p.max}`);

                if (document.getElementById('sink-granite').checked) {
                    total.min += 30; total.max += 60;
                }
            }

            const faucetType = document.getElementById('faucet-type').value;
            if (faucetType !== '0-0') {
                const p = parsePrice(faucetType);
                total.min += p.min; total.max += p.max;
                items.push(`Wasserhahn: ‚Ç¨${p.min}-${p.max}`);
            }

            // Kochger√§te
            const cooktopType = document.getElementById('cooktop-type').value;
            if (cooktopType !== '0-0') {
                const p = parsePrice(cooktopType);
                total.min += p.min; total.max += p.max;
                items.push(`Kochfeld: ‚Ç¨${p.min}-${p.max}`);
            }

            const ovenType = document.getElementById('oven-type').value;
            if (ovenType !== '0-0') {
                const p = parsePrice(ovenType);
                total.min += p.min; total.max += p.max;
                items.push(`Backofen: ‚Ç¨${p.min}-${p.max}`);
            }

            const hoodType = document.getElementById('hood-type').value;
            if (hoodType !== '0-0') {
                const p = parsePrice(hoodType);
                total.min += p.min; total.max += p.max;
                items.push(`Dunstabzug: ‚Ç¨${p.min}-${p.max}`);
            }

            // Weitere K√ºchenger√§te
            const kitchenAppliances = [
                ['dishwasher', 'Geschirrsp√ºler', '100-150'],
                ['fridge-freestanding', 'K√ºhlschrank freistehend', '30-65'],
                ['fridge-builtin', 'K√ºhlschrank Einbau', '50-100'],
                ['fridge-sidebyside', 'Side-by-Side', '60-140']
            ];

            kitchenAppliances.forEach(([id, name, price]) => {
                if (document.getElementById(id).checked) {
                    const p = parsePrice(price);
                    total.min += p.min; total.max += p.max;
                    items.push(`${name}: ‚Ç¨${p.min}-${p.max}`);
                }
            });

            // Finisierung K√ºche
            const kitchenFinishing = [
                ['silicone-complete', 'Silikon komplett', '80-200'],
                ['adjustment-all', 'Justierung', '40-70'],
                ['cleaning-rough', 'Grobe Reinigung', '40-150'],
                ['cleaning-fine', 'Feine Reinigung', '65-200'],
                ['packaging-kitchen', 'Verpackung K√ºche', '40-220']
            ];

            kitchenFinishing.forEach(([id, name, price]) => {
                if (document.getElementById(id).checked) {
                    const p = parsePrice(price);
                    total.min += p.min; total.max += p.max;
                    items.push(`${name}: ‚Ç¨${p.min}-${p.max}`);
                }
            });

            // Wandmontage
            const wallSmallShelves = parseInt(document.getElementById('wall-small-shelves').value) || 0;
            if (wallSmallShelves > 0) {
                total.min += wallSmallShelves * 20; total.max += wallSmallShelves * 35;
                items.push(`${wallSmallShelves}√ó Kleine Regale: ‚Ç¨${wallSmallShelves * 20}-${wallSmallShelves * 35}`);
            }

            const wallLargeShelves = parseInt(document.getElementById('wall-large-shelves').value) || 0;
            if (wallLargeShelves > 0) {
                total.min += wallLargeShelves * 35; total.max += wallLargeShelves * 55;
                items.push(`${wallLargeShelves}√ó Gro√üe Regale: ‚Ç¨${wallLargeShelves * 35}-${wallLargeShelves * 55}`);
            }

            const wallCabinets = parseInt(document.getElementById('wall-cabinets').value) || 0;
            if (wallCabinets > 0) {
                total.min += wallCabinets * 25; total.max += wallCabinets * 65;
                items.push(`${wallCabinets}√ó H√§ngeschr√§nke: ‚Ç¨${wallCabinets * 25}-${wallCabinets * 65}`);
            }

            const wallMirrors = parseInt(document.getElementById('wall-mirrors').value) || 0;
            if (wallMirrors > 0) {
                total.min += wallMirrors * 20; total.max += wallMirrors * 55;
                items.push(`${wallMirrors}√ó Spiegel: ‚Ç¨${wallMirrors * 20}-${wallMirrors * 55}`);
            }

            if (document.getElementById('wall-tv').checked) {
                total.min += 40; total.max += 70;
                items.push('TV-Halterung: ‚Ç¨40-70');
            }

            if (document.getElementById('wall-wardrobe').checked) {
                total.min += 25; total.max += 45;
                items.push('Garderobe: ‚Ç¨25-45');
            }

            // Anti-Tip
            const antitipSmall = parseInt(document.getElementById('antitip-small').value) || 0;
            if (antitipSmall > 0) {
                total.min += antitipSmall * 15; total.max += antitipSmall * 40;
                items.push(`${antitipSmall}√ó Kippsicherung <150cm: ‚Ç¨${antitipSmall * 15}-${antitipSmall * 40}`);
            }

            const antitipMedium = parseInt(document.getElementById('antitip-medium').value) || 0;
            if (antitipMedium > 0) {
                total.min += antitipMedium * 25; total.max += antitipMedium * 60;
                items.push(`${antitipMedium}√ó Kippsicherung 150-200cm: ‚Ç¨${antitipMedium * 25}-${antitipMedium * 60}`);
            }

            const antitipLarge = parseInt(document.getElementById('antitip-large').value) || 0;
            if (antitipLarge > 0) {
                total.min += antitipLarge * 40; total.max += antitipLarge * 140;
                items.push(`${antitipLarge}√ó Kippsicherung >200cm: ‚Ç¨${antitipLarge * 40}-${antitipLarge * 140}`);
            }

            // Verpackung
            const packaging = document.getElementById('packaging').value;
            if (packaging !== '0-0') {
                const p = parsePrice(packaging);
                total.min += p.min; total.max += p.max;
                items.push(`Verpackung: ‚Ç¨${p.min}-${p.max}`);

                if (document.getElementById('packaging-complete').checked) {
                    total.min += 15; total.max += 40;
                }
            }

            // Anpassungen
            const adjustments = [
                ['adj-door-cut', 'T√ºr k√ºrzen', '20-45'],
                ['adj-shelf-cut', 'Regal k√ºrzen', '15-35'],
                ['adj-cable-hole', 'Kabelbohrung', '10-20'],
                ['adj-hinge', 'Scharniere', '12-20'],
                ['adj-drawer', 'Schubladen', '12-20']
            ];

            adjustments.forEach(([id, name, price]) => {
                if (document.getElementById(id).checked) {
                    const p = parsePrice(price);
                    total.min += p.min; total.max += p.max;
                    items.push(`${name}: ‚Ç¨${p.min}-${p.max}`);
                }
            });

            // M√∂bel bewegen
            const moveSmall = parseInt(document.getElementById('move-small').value) || 0;
            if (moveSmall > 0) {
                total.min += moveSmall * 15; total.max += moveSmall * 40;
                items.push(`${moveSmall}√ó Kleine M√∂bel bewegen: ‚Ç¨${moveSmall * 15}-${moveSmall * 40}`);
            }

            const moveMedium = parseInt(document.getElementById('move-medium').value) || 0;
            if (moveMedium > 0) {
                total.min += moveMedium * 25; total.max += moveMedium * 65;
                items.push(`${moveMedium}√ó Mittlere M√∂bel bewegen: ‚Ç¨${moveMedium * 25}-${moveMedium * 65}`);
            }

            const moveLarge = parseInt(document.getElementById('move-large').value) || 0;
            if (moveLarge > 0) {
                total.min += moveLarge * 40; total.max += moveLarge * 120;
                items.push(`${moveLarge}√ó Gro√üe M√∂bel bewegen: ‚Ç¨${moveLarge * 40}-${moveLarge * 120}`);
            }

            if (document.getElementById('move-stairs').checked) {
                const moveTotal = moveSmall + moveMedium + moveLarge;
                if (moveTotal > 0) {
                    total.min += moveTotal * 15; total.max += moveTotal * 40;
                }
            }

            // Alte K√ºche
            const oldKitchen = document.getElementById('old-kitchen').value;
            if (oldKitchen !== '0-0') {
                const p = parsePrice(oldKitchen);
                total.min += p.min; total.max += p.max;
                items.push(`Alte K√ºche: ‚Ç¨${p.min}-${p.max}`);
            }

            // ERGEBNIS ANZEIGEN
            if (total.min === 0 && total.max === 0) {
                alert('Bitte w√§hlen Sie mindestens ein M√∂belst√ºck oder eine Leistung aus!');
                return;
            }

            const nettoMin = Math.round(total.min / 1.19);
            const nettoMax = Math.round(total.max / 1.19);
            const mwstMin = total.min - nettoMin;
            const mwstMax = total.max - nettoMax;

            let resultHTML = '<div style="max-height: 400px; overflow-y: auto; margin-bottom: 15px;">';
            items.forEach(item => {
                resultHTML += `<div class="result-item" style="font-size: 0.85rem;"><span>${item}</span></div>`;
            });
            resultHTML += '</div>';

            resultHTML += '<div class="result-total-section">';
            resultHTML += `<div class="result-item"><span>Netto:</span><span style="font-size: 1.1rem;">‚Ç¨${nettoMin} - ‚Ç¨${nettoMax}</span></div>`;
            resultHTML += `<div class="result-item"><span>MwSt (19%):</span><span style="font-size: 1.1rem;">‚Ç¨${mwstMin} - ‚Ç¨${mwstMax}</span></div>`;
            resultHTML += `<div class="result-item" style="padding-top: 15px;"><span><strong>GESAMT:</strong></span><span class="result-total">‚Ç¨${total.min} - ‚Ç¨${total.max}</span></div>`;
            resultHTML += '</div>';

            document.getElementById('result-content').innerHTML = resultHTML;
            document.getElementById('result').scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }

        function resetCalculator() {
            document.querySelectorAll('select').forEach(s => s.value = s.options[0].value);
            document.querySelectorAll('input[type="checkbox"]').forEach(cb => cb.checked = false);
            document.querySelectorAll('input[type="number"]').forEach(input => input.value = 0);
            
            document.getElementById('result-content').innerHTML = `
                <p style="text-align: center; opacity: 0.8; padding: 20px;">
                    W√§hlen Sie M√∂bel und Leistungen aus und klicken Sie auf "GESAMTKOSTEN BERECHNEN"
                </p>
            `;
            
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }
    </script>
</body>
</html>
